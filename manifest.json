{
  "manifest_version": 3,
  "name": "Jira Enhanced",
  "description": "Some small - maybe niche - enhancements for Jira",
  "author": "muepatrick.dev",
  "version": "1.2",
  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/jira/software/*"
      ],
      "js": [
        "jiraEnhanced.user.js"
      ]
    }
  ],
  "permissions": [
    "scripting",
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_title": "Jira Enhanced"
  }
}
